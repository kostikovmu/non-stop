  var list = {
    'tag': [
      'event',
      'btl',
      'реклама'
    ],
    'date': [
      '25.01.2018',
      '28.01.2018',
      '09.02.2018'
    ],
    'title': [
      'конференция опора россии',
      'Агентство «НОН СТОП» в предверии Нового Года',
      'Скоро МАСЛЕНИЦА, а как вы готовитесь к проводам зимы? '
    ],
    'description': [
      'Сегодня 19.01.2018г. состоялась внеочередная конференция Ульяновского Регионального отделения «ОПОРА РОССИИ».',
      'Агентство "НОН СТОП" в предверии Нового Года провели дегустацию в куснейшего кофе BUSHIDO!',
